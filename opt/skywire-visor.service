[Unit]
Description=Skywire-Mainnet Visor
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/home/pi/opt/skywire
ExecStart=/home/pi/opt/skywire/skywire-visor /home/pi/opt/skywire/skywire-config.json
ExecStop=kill
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
